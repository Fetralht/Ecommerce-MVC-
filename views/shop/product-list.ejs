<%- include('../includes/head.ejs')%>
    <% if(prods.length > 0){%>
    <link rel="stylesheet" href="/css/publication.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <%}%>
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <div class="container">
        <% if(prods.length > 0){ %>
            <div class="row g-4">
                <% for(product of prods){ %>
                <div class="col-lg-4 col-md-6 col-sm-12">
                    <div class="card">
                        <div class="card-header text-center bg-primary text-white">
                            <h1 class="h1"><%= product.title %></h1>
                        </div>
                        <div class="card-body text-center">
                            <img src="<%= product.imageURL %>" class="img-fluid mb-3" alt="<%= product.title %>">
                            <h2 class="h2">$<%= product.price %></h2>
                            <p class="p"><%= product.description %></p>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        <% } else { %>
            <h1 class="text-center">No product found</h1>
        <% } %>
    </div>
    <%- include('../includes/end.ejs')%>