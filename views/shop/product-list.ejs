<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/main.css">
    <% if(prods.length > 0){%>
    <link rel="stylesheet" href="/css/publication.css">
    <%}%>
</head>
<body>
    <%- include('../includes/navigation.ejs')%>
    <main class="main">
        <% if(prods.length > 0){%>
           <article class="article">
            <%for(product of prods){%>
                 <header class="header1">
                     <h1 class="h1"><%= product.title%></h1>
                 </header>
                 <div class="div1">
                     <img src="<%= product.imageURL%>" width="300px" height="200px" alt="imageURL">
                 </div>
                 <div class="div1">
                     <h2 class="h2"><%= product.price%></h2>
                     <p class="p"><%= product.description%></p>
                 </div>
                 <%- include('../includes/hiddenAction',{product:product})%>
                 
            <%}%>
             </article>
        <% }  else {%>
            <h1>No product found</h1>
        <% } %>
    </main>
    <%- include('../includes/end.ejs')%>